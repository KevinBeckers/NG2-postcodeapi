{
    "compilerOptions": {
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "rootDir": "./src",
        "lib": [
            "es2016",
            "dom"
        ],
        "skipLibCheck": true,
        "types": [],
        "paths": {
            "@angular/core": ["node_modules/@angular/core"],
            "@angular/http": ["node_modules/@angular/http"],
            "rxjs/*": ["node_modules/rxjs/*"]
        }
    }
}